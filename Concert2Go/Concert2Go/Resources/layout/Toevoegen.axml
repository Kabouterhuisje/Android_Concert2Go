<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:rowCount="6"
    android:columnCount="2">
    <TextView
        android:text="Artiest"
        android:textSize="30px"
        android:padding="20px"
        android:textColor="@android:color/white" />
    <EditText
        android:id="@+id/ArtiestTekst"
        android:textColor="@android:color/black"
        android:width="500px"
        android:background="@android:color/white"
        android:textSize="30px" />
    <TextView
        android:text="Land"
        android:textSize="30px"
        android:padding="20px"
        android:textColor="@android:color/white" />
    <EditText
        android:id="@+id/LandTekst"
        android:textColor="@android:color/black"
        android:width="500px"
        android:background="@android:color/white"
        android:textSize="30px" />
    <TextView
        android:text="Plaats"
        android:textSize="30px"
        android:padding="20px"
        android:textColor="@android:color/white" />
    <EditText
        android:id="@+id/PlaatsTekst"
        android:textColor="@android:color/black"
        android:width="500px"
        android:background="@android:color/white"
        android:textSize="30px" />
    <TextView
        android:text="Zaal"
        android:textSize="30px"
        android:padding="20px"
        android:textColor="@android:color/white" />
    <EditText
        android:id="@+id/ZaalTekst"
        android:textColor="@android:color/black"
        android:width="500px"
        android:background="@android:color/white"
        android:textSize="30px" />
    <Button
        android:text="Datum"
        android:id="@+id/pickDate"
        android:textSize="30px"
        android:padding="20px"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white" />
    <EditText
        android:id="@+id/DatumTekst"
        android:textColor="@android:color/black"
        android:width="500px"
        android:background="@android:color/white"
        android:textSize="30px" />
    <TextView
        android:text="Opmerking"
        android:textSize="30px"
        android:padding="20px"
        android:textColor="@android:color/white" />
    <EditText
        android:id="@+id/OpmerkingTekst"
        android:inputType="textMultiLine"
        android:textColor="@android:color/black"
        android:width="500px"
        android:background="@android:color/white"
        android:textSize="30px" />
    <Button
        android:background="@android:color/white"
        android:width="200px"
        android:height="10px"
        android:text="Toevoegen"
        android:textColor="@android:color/black"
        android:textSize="30px"
        android:layout_marginTop="50px"
        android:layout_marginLeft="10px"
        android:id="@+id/btnSave" />
</GridLayout>